<div class="text-center m-5 pb-5">
<h1>Gossip n°<%=params['id']%></h1>
<h2>Auteur : <%= Gossip.find(params['id']).user.first_name %></h2>
<h3>Titre : <%= Gossip.find(params['id']).title %></h3>
<h4>Contenu : <%= Gossip.find(params['id']).content %></h4>
<h6>Mis à jour le : <%= Gossip.find(params['id']).updated_at %></h6>
<br>
<center><a href="<%= author_path(Gossip.find(params['id']).user) %>" class="mt-3 mb-1 btn btn-lg btn btn-outline-primary">Voir le profil de l'auteur</a></center>

<center><a href="<%= edit_ragot_path %>" class="mt-3 mb-4 btn btn-lg btn btn-outline-warning">Modifier ce ragot !</a></center>

<center><%= link_to "Supprimer", ragot_path(@gossips.id), class:"mt-1 mb-4 btn btn-lg btn-outline-danger", data:{confirm:"Etes vous sûr de vouloir supprimer ce potin ?", method:"DELETE"} %></center
<br>
<p>
  <button class="mt-1 mb-4 btn btn-lg btn-success" type="button" data-toggle="collapse" data-target="#sectioncommentaires" aria-expanded="false" aria-controls="sectioncommentaires">
    | Section ::COMMENTAIRES:: |
  </button>
</p>
    <div class="collapse" id="sectioncommentaires">
      <div class="card card-body">
      <center><%= link_to "Ajouter un commentaire", new_ragot_comment_path(@gossips.id), class:"mt-3 mb-4 btn btn-outline-info" %></center>

      
          <% @comments.each do |comment| %>
              <div class="container mt-3">
                <blockquote class="blockquote mb-0">
                  <h6 class="small mt-3"><%= "#{comment[1]}, #{comment[2]}" %></h6>
                  <p class="small"><%= comment[0].content %></p>
                  <footer class="blockquote-footer">
                  <center><%= link_to "Modifier un commentaire", edit_ragot_comment_path(@gossips.id, comment[0].id), class:"mt-3 mb-4 btn btn-outline-info" %></center>
                  <center><%= link_to "Supprimer ce commentaire !", root_path, class:"mt-1 mb-4 btn btn-outline-danger", data:{confirm:"Etes vous sûr de vouloir supprimer ce potin ?", method:"DELETE"} %></center
              </div>
          <% end %> 
  
        </div>
      </div>
    </div>
  </div>
</div>